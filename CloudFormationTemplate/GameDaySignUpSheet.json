    "Resources": {
        "LambdaSendEmail": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Description": "Lambda Function to update Team Metadata in the DDB table",
                "Runtime": "python3.9",
                "Role": {
                    "Fn::GetAtt": [
                        "SendEmailRole",
                        "Arn"
                    ]
                },
                "Handler": "lambda_function.lambda_handler",
                "Code": {
                    "S3Bucket": {
                        "Ref": "LambdaFilesBucket"
                    },
                    "S3Key": {
                        "Ref": "LambdaZipNameEmail"
                    }
                },
                "Timeout": 120,
                "Environment": {
                    "Variables": {
                        "MAIN_CONFERENCE_ROOM": {
                            "Ref": "MainEventRoom"
                        },
                        "REGION": {
                            "Ref": "DefaultRegion"
                        },
                        "SENDER": {
                            "Ref": "SESVerifiedEmail"
                        }
                    }
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "db3cdf5a-059a-4c98-bb5c-969c9ff67ada"
                }
            },
            "DependsOn": [
                "SendEmailRole"
            ]
        },
        "UpdateParticipantRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "lambda.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "Path": "/service-role/",
                "Policies": [
                    {
                        "PolicyName": "DynamoDBReadWrite",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Sid": "VisualEditor0",
                                    "Effect": "Allow",
                                    "Action": [
                                        "dynamodb:BatchGetItem",
                                        "dynamodb:BatchWriteItem",
                                        "dynamodb:PutItem",
                                        "dynamodb:DeleteItem",
                                        "dynamodb:GetItem",
                                        "dynamodb:Scan",
                                        "dynamodb:Query",
                                        "dynamodb:UpdateItem",
                                        "dynamodb:UpdateTable"
                                    ],
                                    "Resource": [
                                        {
                                            "Fn::GetAtt": [
                                                "GameDayParticipants",
                                                "Arn"
                                            ]
                                        },
                                        {
                                            "Fn::GetAtt": [
                                                "GameDayTeams",
                                                "Arn"
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "5245b774-6fbf-49bb-a7a7-56029743f998"
                }
            },
            "DependsOn": [
                "GameDayTeams",
                "GameDayParticipants"
            ]
        },
        "SendEmailRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "lambda.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "Path": "/service-role/",
                "Policies": [
                    {
                        "PolicyName": "SendSESEmailandDDBInvoke",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "ses:SendEmail",
                                        "ses:SendTemplatedEmail",
                                        "ses:SendRawEmail"
                                    ],
                                    "Resource": "*"
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Resource": "arn:aws:logs:*:*:*"
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "lambda:InvokeFunction"
                                    ],
                                    "Resource": "*"
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "dynamodb:DescribeStream",
                                        "dynamodb:GetRecords",
                                        "dynamodb:GetShardIterator",
                                        "dynamodb:ListStreams"
                                    ],
                                    "Resource": "*"
                                }
                            ]
                        }
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "87e562dc-c1fb-41d3-9b3a-7a17e2eaecf1"
                }
            },
            "DependsOn": [
                "GameDayParticipants",
                "GameDayTeams"
            ]
        },
        "GameDayParticipants": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "AttendeeID",
                        "AttributeType": "N"
                    },
                    {
                        "AttributeName": "Team",
                        "AttributeType": "N"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "AttendeeID",
                        "KeyType": "HASH"
                    },
                    {
                        "AttributeName": "Team",
                        "KeyType": "RANGE"
                    }
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": "5",
                    "WriteCapacityUnits": "5"
                },
                "StreamSpecification": {
                    "StreamViewType": "NEW_IMAGE"
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "f47ca9e2-29d6-4f60-bc8a-26f331ac0b24"
                }
            }
        },
        "GameDayTeams": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "Team",
                        "AttributeType": "N"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "Team",
                        "KeyType": "HASH"
                    }
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": "5",
                    "WriteCapacityUnits": "5"
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "7416dd83-0ac8-459a-9c02-5ce036ad451f"
                }
            }
        },
        "LambdaUpdateParticipant": {
            "Type": "AWS::Lambda::Function",
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "b68004d7-7451-4406-abe9-04c09eefa08a"
                }
            },
            "Properties": {
                "Description": "Lambda Function to update participants in the DDB table",
                "Runtime": "python3.9",
                "Role": {
                    "Fn::GetAtt": [
                        "UpdateParticipantRole",
                        "Arn"
                    ]
                },
                "Handler": "lambda_function.lambda_handler",
                "Code": {
                    "S3Bucket": {
                        "Ref": "LambdaFilesBucket"
                    },
                    "S3Key": {
                        "Ref": "LambdaZipNameDatabase"
                    }
                },
                "Timeout": 120,
                "Environment": {
                    "Variables": {
                        "MAX_NUM_TEAMS": {
                            "Ref": "MaxTeams"
                        },
                        "REGION": {
                            "Ref": "DefaultRegion"
                        },
                        "REGISTRATION_TABLE": {
                            "Ref": "GameDayParticipants"
                        },
                        "TEAM_SIZE": {
                            "Ref": "MaxTeamSize"
                        },
                        "TEAM_TABLE": {
                            "Ref": "GameDayTeams"
                        }
                    }
                }
            },
            "DependsOn": [
                "UpdateParticipantRole"
            ]
        },
        "LambdaTrigger": {
            "Type": "AWS::Lambda::EventSourceMapping",
            "Properties": {
                "EventSourceArn": {
                    "Fn::GetAtt": [
                        "GameDayParticipants",
                        "StreamArn"
                    ]
                },
                "FunctionName": {
                    "Ref": "LambdaSendEmail"
                },
                "StartingPosition": "LATEST"
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "3ade7719-8008-4ec6-8075-f57130a82b6f"
                }
            },
            "DependsOn": [
                "LambdaSendEmail"
            ]
        },
        "GameDayWebsiteBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "WebsiteConfiguration": {
                    "ErrorDocument": "invalid.html",
                    "IndexDocument": "registrationForm.html"
                },
                "PublicAccessBlockConfiguration": {
                    "BlockPublicAcls": true,
                    "BlockPublicPolicy": true,
                    "IgnorePublicAcls": true,
                    "RestrictPublicBuckets": true
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "e63fa337-8dd5-4342-bf9f-093a32744ece"
                }
            }
        },
        "GameDayWebsiteBucketPolicy": {
            "Type": "AWS::S3::BucketPolicy",
            "Properties": {
                "Bucket": {
                    "Ref": "GameDayWebsiteBucket"
                },
                "PolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "s3:GetObject"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "AWS": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "arn:aws:iam::cloudfront:user/CloudFront Origin Access Identity ",
                                            {
                                                "Ref": "GameDayCloudFrontIdentity"
                                            }
                                        ]
                                    ]
                                }
                            },
                            "Resource": {
                                "Fn::Join": [
                                    "",
                                    [
                                        "arn:aws:s3:::",
                                        {
                                            "Ref": "GameDayWebsiteBucket"
                                        },
                                        "/*"
                                    ]
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "f16c2fb4-c0af-4de4-b31b-30756618b414"
                }
            },
            "DependsOn": [
                "GameDayWebsiteBucket",
                "GameDayCloudFrontIdentity"
            ]
        },
        "LambdaS3WebsiteFunction": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Description": "Copy website files to custom S3 Bucket",
                "FunctionName": "LambdaS3Website",
                "Handler": "lambda_function.lambda_handler",
                "Role": {
                    "Fn::GetAtt": [
                        "AWSLambdaS3ExecutionRole",
                        "Arn"
                    ]
                },
                "Timeout": 360,
                "Runtime": "python3.9",
                "Code": {
                    "S3Bucket": {
                        "Ref": "LambdaFilesBucket"
                    },
                    "S3Key": {
                        "Ref": "LambdaZipNameWebsite"
                    }
                },
                "Environment": {
                    "Variables": {
                        "DESTINATION_BUCKET": {
                            "Ref": "GameDayWebsiteBucket"
                        },
                        "SOURCE_BUCKET": {
                            "Ref": "SourceBucket"
                        },
                        "API_GATEWAY": {
                            "Fn::Join": [
                                "",
                                [
                                    "https://",
                                    {
                                        "Ref": "GameDayAPIGateway"
                                    },
                                    ".execute-api.",
                                    {
                                        "Ref": "DefaultRegion"
                                    },
                                    ".amazonaws.com/V1/register"
                                ]
                            ]
                        }
                    }
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "c3dd8462-e5d4-44fd-b566-a218860db6ec"
                }
            },
            "DependsOn": [
                "apiGatewayDeployment"
            ]
        },
        "Lambdainvoke": {
            "Type": "AWS::CloudFormation::CustomResource",
            "Version": "1.0",
            "Properties": {
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "LambdaS3WebsiteFunction",
                        "Arn"
                    ]
                },
                "FunctionName": "LambdaS3WebsiteFunction"

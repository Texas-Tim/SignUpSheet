    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "DefaultRegion": {
            "Description": "Region that your verified SES Email is in",
            "Type": "String",
            "Default": "us-east-1"
        },
        "SESVerifiedEmail": {
            "Description": "SES Verified Email with which to send updates to attendees",
            "Type": "String"
        },
        "LambdaFilesBucket": {
            "Description": "S3 Bucket that stores the Lambda Function source code",
            "Type": "String",
            "Default": "aws-game-day-sign-up"
        },
        "LambdaZipNameDatabase": {
            "Description": "Zip file for Database Lambda code",
            "Type": "String",
            "Default": "Lambdas/databaseLambda.zip"
        },
        "LambdaZipNameEmail": {
            "Description": "Zip file for Email Lambda code",
            "Type": "String",
            "Default": "Lambdas/emailLambda.zip"
        },
        "LambdaZipNameWebsite": {
            "Description": "Zip file for Website Lambda code",
            "Type": "String",
            "Default": "Lambdas/S3CopyLambda.zip"
        },
        "SourceBucket": {
            "Description": "Source of Website Files to copy over",
            "Type": "String",
            "Default": "aws-game-day-sign-up"
        },
        "MaxTeams": {
            "Description": "Maximum number of teams spun up in Event Engine",
            "Type": "String"
        },
        "MaxTeamSize": {
            "Description": "Maximum size of each team per Event Engine",
            "Type": "String",
            "Default": "4"
        },
        "MainEventRoom": {
            "Description": "URL to main event room",
            "Type": "String"
        },
        "APIGatewayEndpointType": {
            "Description": "Valid Endpoint Types Include: EDGE, REGIONAL, PRIVATE",
            "Type": "String",
            "Default": "REGIONAL"
        }
    },

{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "S3 / Route53 / CloudFront CloudFormation configuration",
    "Parameters": {
        "LambdaFilesBucket": {
            "Description": "S3 Bucket that stores the Lambda Function source code",
            "Type": "String",
            "Default": "aws-game-day-sign-up"
        },
        "DefaultRegion": {
            "Description": "Default region to spin up resources",
            "Type": "String",
            "Default": "us-east-1"
        },
        "LambdaZipNameWebsite": {
            "Description": "Zip file for Website Lambda code",
            "Type": "String",
            "Default": "Lambdas/S3CopyLambda.zip"
        },
        "SourceBucket": {
            "Description": "Source of Website Files to copy over",
            "Type": "String",
            "Default": "aws-game-day-sign-up"
        }
    },
    "Resources": {
        "GameDayWebsiteBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "PublicAccessBlockConfiguration": {
                    "BlockPublicAcls": true,
                    "BlockPublicPolicy": true,
                    "IgnorePublicAcls": true,
                    "RestrictPublicBuckets": true
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "e63fa337-8dd5-4342-bf9f-093a32744ece"
                }
            }
        },
        "LambdaS3WebsiteFunction": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Description": "Copy website files to custom S3 Bucket",
                "FunctionName": "LambdaS3Website",
                "Handler": "lambda_function.lambda_handler",
                "Role": {
                    "Fn::GetAtt": [
                        "AWSLambdaS3ExecutionRole",
                        "Arn"
                    ]
                },
                "Timeout": 360,
                "Runtime": "python3.9",
                "Code": {
                    "S3Bucket": {
                        "Ref": "LambdaFilesBucket"
                    },
                    "S3Key": {
                        "Ref": "LambdaZipNameWebsite"
                    }
                },
                "Environment": {
                    "Variables": {
                        "DESTINATION_BUCKET": {
                            "Ref": "GameDayWebsiteBucket"
                        },
                        "SOURCE_BUCKET": {
                            "Ref": "SourceBucket"
                        }
                    }
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "c3dd8462-e5d4-44fd-b566-a218860db6ec"
                }
            },
            "DependsOn": [
                "AWSLambdaS3ExecutionRole"
            ]
        },
        "Lambdainvoke": {
            "Type": "AWS::CloudFormation::CustomResource",
            "Version": "1.0",
            "Properties": {
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "LambdaS3WebsiteFunction",
                        "Arn"
                    ]
                },
                "FunctionName": "LambdaS3WebsiteFunction"
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "368dccdc-2396-4edd-ad8f-3d8d8f32f573"
                }
            },
            "DependsOn": [
                "LambdaS3WebsiteFunction"
            ]
        },
        "AWSLambdaS3ExecutionRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "lambda.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "Path": "/service-role/",
                "Policies": [
                    {
                        "PolicyName": "S3ReadWrite",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "s3:PutObject",
                                        "s3:GetObjectAcl",
                                        "s3:GetObject",
                                        "s3:DeleteObject",
                                        "s3:ListBucket",
                                        "s3:GetBucketAcl"
                                    ],
                                    "Resource": [
                                        {
                                            "Fn::Join": [
                                                "",
                                                [
                                                    "arn:aws:s3:::",
                                                    {
                                                        "Ref": "GameDayWebsiteBucket"
                                                    }
                                                ]
                                            ]
                                        },
                                        {
                                            "Fn::Join": [
                                                "",
                                                [
                                                    "arn:aws:s3:::",
                                                    {
                                                        "Ref": "SourceBucket"
                                                    }
                                                ]
                                            ]
                                        },
                                        "arn:aws:s3:::*/*"
                                    ]
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": "logs:CreateLogGroup",
                                    "Resource": {
                                        "Fn::Join": [
                                            "",
                                            [
                                                "arn:aws:logs:",
                                                {
                                                    "Ref": "DefaultRegion"
                                                },
                                                ":",
                                                {
                                                    "Ref": "AWS::AccountId"
                                                },
                                                ":*"
                                            ]
                                        ]
                                    }
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Resource": {
                                        "Fn::Join": [
                                            "",
                                            [
                                                "arn:aws:logs:",
                                                {
                                                    "Ref": "DefaultRegion"
                                                },
                                                ":",
                                                {
                                                    "Ref": "AWS::AccountId"
                                                },
                                                ":log-group:/aws/lambda/LambdaS3Website:*"
                                            ]
                                        ]
                                    }
                                }
                            ]
                        }
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "e7254462-a40b-44a2-bae1-99a3dff4165e"
                }
            },
            "DependsOn": [
                "GameDayWebsiteBucket"
            ]
        }
    },
    "Metadata": {
